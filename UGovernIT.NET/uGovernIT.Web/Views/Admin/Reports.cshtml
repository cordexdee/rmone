
@{
    Layout = "~/Views/Shared/AdminLayouts.cshtml";
    ViewBag.Title = "Reports";
    var moduleDictionary = ViewBag.moduleDictionary;
}

@*@Html.Button("viewSampleReportId").Text("View Sample").Type(ButtonType.Button).ClientSideEvents(e => e.Click("onclick"))*@

<div style="width:60%;display: block;margin: auto;">
    <p class="heading">Reports</p>
    <div style="width: 100%;float: left;">
        <div class="first-block">
            <div class="inner center-bullet" style="width: 150px;height:87px;float: left;padding: 40px 0px 0px;margin-top: 0px;float: left; border-right:2px solid rgb(222, 181, 153);">
                <img class="icon_size" src="~/Content/Images/Admin/Configure/RequestList/to-do-list-2.png" />
                <p class="icon_text" style="padding-top:5px;">Select Workflow</p>
            </div>

            <div id="mixedSlider">
                <div class="MS-content">
                    <div class="item">
                        <img class="icon_size bar" src="~/Content/Images/Admin/Configure/Workflows/ipad-2.png" onclick="return Admin.loadModule('Reports','/Layouts/uGovernIT/DelegateControl.aspx?control=moduleedit&ID=@moduleDictionary["TSR"]','Module - Technical Service Request (TSR)','700px;','700px;','%2fLayouts%2fuGovernIT%2fuGovernITConfiguration.aspx',true);" />
                        <div class="line"><span></span></div>
                        <p class="icon_text">Incident (TSR)</p>
                    </div>
                    <div class="item">
                        <img class="icon_size bar" src="~/Content/Images/Admin/Configure/Workflows/change-of-boss.png" onclick="return Admin.loadModule('Reports','/Layouts/uGovernIT/DelegateControl.aspx?control=moduleedit&ID=@moduleDictionary["ACR"]','Module - Application Change Request (ACR)','700px','700px','%2fLayouts%2fuGovernIT%2fuGovernITConfiguration.aspx','true');" />
                        <div class="line"><span></span></div>
                        <p class="icon_text text-center">Change Request (ACR)</p>
                    </div>
                    <div class="item">
                        <img class="icon_size bar" src="~/Content/Images/Admin/Configure/Workflows/secretary.png" onclick="return Admin.loadModule('Reports','/Layouts/uGovernIT/DelegateControl.aspx?control=moduleedit&ID=@moduleDictionary["DRQ"]','Module - Change Management (DRQ)','700px;','700px;','%2fLayouts%2fuGovernIT%2fuGovernITConfiguration.aspx','true');" />
                        <div class="line"><span></span></div>
                        <p class="icon_text text-center">Change Control (DRQ)</p>

                    </div>
                    <div class="item">
                        <img class="icon_size bar" src="~/Content/Images/Admin/Configure/Workflows/cause-trouble.png" onclick="return Admin.loadModule('Workflows','/Layouts/uGovernIT/DelegateControl.aspx?control=moduleedit&ID=@moduleDictionary["RCA"]','Module - Root Cause Analysis (RCA)','700px;','700px;','%2fLayouts%2fuGovernIT%2fuGovernITConfiguration.aspx',true);" />
                        <div class="line"><span></span></div>
                        <p class="icon_text">Problem Analysis (RCA)</p>

                    </div>
                </div>
                <div class="MS-controls">
                    <button class="MS-left"><i class="fa fa-angle-left fa-2x" aria-hidden="true"></i></button>
